@model IEnumerable<ToolShopDomainCore.Domain.Entity.OperationRaport>

@{
    ViewData["Title"] = "Index";
}

<h1>Operation History</h1>


<table class="table"style="text-align:center;">
    <thead>
        <tr>
            <th>
                <a  style="padding-right:3px; font-size:10px; color:black;text-decoration:none" asp-action="Index" asp-route-SortBy="Id">&#9660</a> @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                <a style="padding-right:3px; font-size:10px; color:black;text-decoration:none" asp-action="Index" asp-route-SortBy="Operation">&#9660</a>@Html.DisplayNameFor(model => model.Operation)
            </th>
            <th>
                <a style="padding-right:3px; font-size:10px; color:black;text-decoration:none" asp-action="Index" asp-route-SortBy="UserName">&#9660</a>@Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                <a style="padding-right:3px; font-size:10px; color:black;text-decoration:none" asp-action="Index" asp-route-SortBy="DateOfRealising">&#9660</a>@Html.DisplayNameFor(model => model.DateOfRealising)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfRealising)
            </td>
        </tr>
}
    </tbody>
</table>
