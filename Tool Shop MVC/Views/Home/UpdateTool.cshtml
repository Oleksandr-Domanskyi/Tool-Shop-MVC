@using ToolShopDomainCore.Domain.Enums
@model ToolShopApplication.DataTransferObject.ToolProfileDto

@{
    ViewData["Title"] = "UpdateTool";
}

<h1>Update information</h1>

<h4>@Model.Name</h4>
<hr />


<form action="/Home/Update" method="post" enctype="multipart/form-data">
    <div class="row mb-5">
        <input class="visually-hidden" value="@Model.Id" asp-for="Id" />
    </div>

    <div class="row mb-5">
        <label class="col-sm-5">Name of Tool</label>
        <div class="col-sm-5">
            <input class="form-control" value="@Model.Name" asp-for="Name" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Price</label>
        <div class="col-sm-5">
            <input class="form-control" value="@Model.Price" asp-for="Price" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Description</label>
        <div class="col-sm-5">
            <input class="form-control" value="@Model.Description"  asp-for="Description" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Category</label>
        <div class="col-sm-5">
            <select asp-for="@Model.Category" value="@Model.Category" class="form-control">
                @foreach (var category in Enum.GetValues(typeof(Category)))
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-5">
        <label class="col-sm-5">Image</label>
        <div class="col-sm-5">
            <input class="form-control" type="file" name="image" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
    <div class="form-group">
        <button type="submit"asp-action="Delete"  class="btn btn-danger">Delete</button>
    </div>

</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
