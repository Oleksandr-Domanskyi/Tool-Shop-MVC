@using ToolShopDomainCore.Domain.Enums
@model ToolShopApplication.DataTransferObject.ToolProfileRequest

@{
    ViewData["Title"] = "AddTool";
}

<h1>AddTool</h1>

<h4>ToolProfileRequest</h4>
<hr />


<form method="POST" enctype="multipart/form-data">

    <div class="row mb-5">
        <label class="col-sm-5">Name of Tool</label>
        <div class="col-sm-5">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Price</label>
        <div class="col-sm-5">
            <input class="form-control" asp-for="Price" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Description</label>
        <div class="col-sm-5">
            <input class="form-control" asp-for="Description" />
        </div>
    </div>
    <div class="row mb-5">
        <label class="col-sm-5">Category</label>
        <div class="col-sm-5">
            <select asp-for="@Model.Category" class="form-control">
                @foreach (var category in Enum.GetValues(typeof(Category)))
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-5">
        <label class="col-sm-5">Image</label>
        <div class="col-sm-5">
            <input class="form-control" type="file" name="image" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" asp-action="AddModal" class="btn btn-primary" />
    </div>

</form>

            

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
